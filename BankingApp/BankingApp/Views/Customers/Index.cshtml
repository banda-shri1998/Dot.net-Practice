@model IEnumerable<BankingApp.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Employee"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GENDER)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Branch.BranchName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AccNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CustName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CustAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DOB)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GENDER)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AccountType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Balance)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Branch.BranchName)
    </td>
    <td>
        @if (User.IsInRole("Employee"))
        {
            @Html.ActionLink("Delete", "Delete", new { id = item.AccNo })<text> | </text>
        }
        @if (User.IsInRole("Customer") || User.IsInRole("Employee"))
        {
            @Html.ActionLink("Details", "Details", new { id = item.AccNo }) <text> | </text>
        }
        @if (User.IsInRole("Employee"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = item.AccNo }) <text> | </text>
        }

        @*@Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
    </td>
</tr>
}

</table>
